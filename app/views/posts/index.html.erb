<div id="sidebar" style="float: left; margin: 100px;"></div>
<div id="content" style="float: left; margin: 100px;"></div>

<script type="application/json" id="bootstrapped_posts_json">
  <%= Post.all.to_json.html_safe %>
</script>

<script type="application/javascript">
  $(function () {

    var posts = JSON.parse($("#bootstrapped_posts_json").html());

    window.Journal.initialize($("#sidebar"), $("#content"), posts);
  });
</script>