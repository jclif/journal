<ul>
  <% posts.each(function (post) { %>
    <li class="post">
      <a href="#/posts/<%= post.escape("id") %>">
        <%= post.escape("title")%>
      </a><img src="/assets/remove.png" data-id="<%= post.escape("id") %>" class="remove">
    </li>
  <% }); %>
</ul>

